<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="com.example.addressbook.view.AddContactView"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <fx:include source="MenuBar.fxml"/>
    </top>
    <center>
        <VBox>
            <Label text="Name: "/>
            <TextField fx:id="nameField" promptText="Enter name"></TextField>

            <Label text="Number: "/>
            <TextField fx:id="numberField" promptText="Enter number"></TextField>

            <Label text="Email: "/>
            <TextField fx:id="emailField" promptText="Enter email"></TextField>

            <Label text="Address: "/>
            <TextField fx:id="addressField" promptText="Enter address"></TextField>

            <TilePane fx:id="groupsTilePane"></TilePane>

            <Button text="Submit" defaultButton="true" onAction="#submitAddContactForm"/>
            <Button text="Reset" onAction="#resetPage"/>
        </VBox>

    </center>
</BorderPane>
